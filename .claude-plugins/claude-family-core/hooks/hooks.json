{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python \"${CLAUDE_PLUGIN_ROOT}/scripts/session_startup_hook.py\"",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__orchestrator__check_inbox",
        "hooks": [
          {
            "type": "command",
            "command": "echo {\"systemMessage\": \"Messages checked. Remember to acknowledge important ones.\"}"
          }
        ]
      }
    ]
  }
}
