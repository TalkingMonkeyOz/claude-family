{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude-plugins/claude-family-core/scripts/session_startup_hook.py\"",
            "timeout": 30,
            "description": "Load session state and check for messages"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude-plugins/claude-family-core/scripts/session_startup_hook.py\" --resume",
            "timeout": 30,
            "description": "Resume session with saved state"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before ending, save session state by running /session-end to preserve your todo list and work focus for next session.",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__orchestrator__check_inbox",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"Messages checked. Acknowledge important ones.\"}'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
