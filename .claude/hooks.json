{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate: Does this task benefit from a skill? Check: database-operations (SQL), work-routing (feedback/features), code-review (commits), session-management (start/end), project-ops (setup), messaging (coordination). Use Skill tool if applicable.",
            "timeout": 2,
            "description": "Skills-first evaluation (replaces process_router)"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/scripts/instruction_matcher.py\"",
            "timeout": 5,
            "description": "Auto-apply coding standards based on file pattern (awesome-copilot inspired)"
          },
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/validate_claude_md.py\" \"$FILE_PATH\"",
            "timeout": 10,
            "description": "Validate CLAUDE.md governance compliance"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/scripts/instruction_matcher.py\"",
            "timeout": 5,
            "description": "Auto-apply coding standards based on file pattern (awesome-copilot inspired)"
          },
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/validate_claude_md.py\" \"$FILE_PATH\"",
            "timeout": 10,
            "description": "Validate CLAUDE.md governance compliance"
          }
        ]
      },
      {
        "matcher": "mcp__postgres__execute_sql",
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/validate_db_write.py\" \"mcp__postgres__execute_sql\"",
            "timeout": 10,
            "description": "Validate database writes against column_registry"
          },
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/validate_phase.py\"",
            "timeout": 10,
            "description": "Check project phase for build_task creation"
          },
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/validate_parent_links.py\"",
            "timeout": 10,
            "description": "Prevent orphan creation - require parent links"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/session_startup_hook.py\"",
            "timeout": 30,
            "description": "Auto-log session and load state/messages"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/cleanup_mcp_processes.py\"",
            "timeout": 15,
            "description": "Clean up orphaned MCP server processes"
          },
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/.claude-plugins/claude-family-core/scripts/check_doc_updates.py\"",
            "timeout": 10,
            "description": "Check if documentation needs updating"
          },
          {
            "type": "prompt",
            "prompt": "Before ending, save session state by running /session-end to preserve your todo list and work focus for next session.",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/scripts/mcp_usage_logger.py\"",
            "timeout": 30
          }
        ]
      }
    ],
    "PreCommit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/scripts/pre_commit_check.py\"",
            "timeout": 60,
            "blocking": true,
            "description": "Run Level 1 tests: schema validation, sensitive file check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python \"C:/Projects/claude-family/scripts/stop_hook_enforcer.py\"",
            "timeout": 5,
            "description": "Self-enforcing periodic checks: git status, inbox, CLAUDE.md refresh, test reminders"
          }
        ]
      }
    ]
  }
}
