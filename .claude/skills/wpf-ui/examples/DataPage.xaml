<ui:Page x:Class="YourApp.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="Data"
    d:DesignHeight="700"
    d:DesignWidth="1000">

    <Grid Margin="24,0,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Page Header -->
        <TextBlock Text="Data Management" 
                   Grid.Row="0"
                   FontSize="28" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,16" />
        
        <!-- Toolbar -->
        <ui:Card Grid.Row="1" Margin="0,0,0,16" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Search and Filters -->
                <StackPanel Orientation="Horizontal">
                    <ui:TextBox PlaceholderText="Search..." 
                                Width="250"
                                Margin="0,0,12,0">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Search24" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                    
                    <ComboBox Width="150" SelectedIndex="0" Margin="0,0,12,0">
                        <ComboBoxItem Content="All Status" />
                        <ComboBoxItem Content="Active" />
                        <ComboBoxItem Content="Pending" />
                        <ComboBoxItem Content="Completed" />
                    </ComboBox>
                    
                    <ui:Button Content="Filter" 
                               Icon="{ui:SymbolIcon Filter24}" 
                               Appearance="Secondary" />
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Export" 
                               Icon="{ui:SymbolIcon ArrowDownload24}" 
                               Appearance="Secondary"
                               Margin="0,0,8,0" />
                    
                    <ui:Button Content="Add New" 
                               Icon="{ui:SymbolIcon Add24}" 
                               Appearance="Primary" />
                </StackPanel>
            </Grid>
        </ui:Card>
        
        <!-- Data Grid -->
        <ui:Card Grid.Row="2" Padding="0">
            <ui:DataGrid x:Name="DataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         CanUserReorderColumns="True"
                         CanUserResizeColumns="True"
                         CanUserSortColumns="True"
                         SelectionMode="Single"
                         HeadersVisibility="Column"
                         GridLinesVisibility="Horizontal">
                
                <ui:DataGrid.Columns>
                    <!-- ID Column -->
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="80" />
                    
                    <!-- Name Column -->
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*" />
                    
                    <!-- Status Column with Template -->
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="8,4" 
                                        CornerRadius="4" 
                                        HorizontalAlignment="Left"
                                        Background="{ui:ThemeResource SystemFillColorSuccessBackgroundBrush}">
                                    <TextBlock Text="{Binding Status}" 
                                               FontSize="12"
                                               Foreground="{ui:ThemeResource SystemFillColorSuccessBrush}" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Priority Column -->
                    <DataGridTextColumn Header="Priority" 
                                        Binding="{Binding Priority}" 
                                        Width="100" />
                    
                    <!-- Date Column -->
                    <DataGridTextColumn Header="Created" 
                                        Binding="{Binding CreatedAt, StringFormat=d}" 
                                        Width="120" />
                    
                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ui:Button Icon="{ui:SymbolIcon Edit24}" 
                                               ToolTip="Edit"
                                               Appearance="Transparent"
                                               Padding="6" />
                                    <ui:Button Icon="{ui:SymbolIcon Delete24}" 
                                               ToolTip="Delete"
                                               Appearance="Transparent"
                                               Padding="6" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </ui:DataGrid.Columns>
                
            </ui:DataGrid>
        </ui:Card>
        
        <!-- Footer / Pagination -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="Showing 1-10 of 156 items" 
                       VerticalAlignment="Center"
                       Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Icon="{ui:SymbolIcon ChevronLeft24}" 
                           ToolTip="Previous"
                           Appearance="Secondary"
                           Margin="0,0,4,0" />
                
                <ui:Button Content="1" Appearance="Primary" Margin="0,0,4,0" />
                <ui:Button Content="2" Appearance="Secondary" Margin="0,0,4,0" />
                <ui:Button Content="3" Appearance="Secondary" Margin="0,0,4,0" />
                <TextBlock Text="..." VerticalAlignment="Center" Margin="4,0" />
                <ui:Button Content="16" Appearance="Secondary" Margin="0,0,4,0" />
                
                <ui:Button Icon="{ui:SymbolIcon ChevronRight24}" 
                           ToolTip="Next"
                           Appearance="Secondary" />
            </StackPanel>
        </Grid>
        
    </Grid>
</ui:Page>
