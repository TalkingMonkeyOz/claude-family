#!/bin/bash
# Validate work item reference (soft enforcement)
COMMIT_MSG=$(cat "$1")
if ! echo "$COMMIT_MSG" | grep -qE '\[(F|FB|BT)[0-9]+\]'; then
    echo ""
    echo "=============================================="
    echo "NOTE: No work item reference in commit message"
    echo "=============================================="
    echo "Consider: feature/F1-desc, fix/FB1-desc branch naming"
    echo "=============================================="
fi
exit 0
